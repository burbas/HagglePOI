<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

   	<TextView android:id="@+id/info_title"
		android:layout_width="fill_parent"
		android:layout_height="50px"
		android:textSize="40px"
		android:gravity="center"
		android:text="Donken"/>
		
    <RelativeLayout
    	android:layout_width="fill_parent"
    	android:layout_height="200px">
    	<ImageView
    		android:layout_width="200px"
    		android:layout_height="200px"
    		android:layout_alignParentLeft="true"
    		android:layout_alignParentTop="true"
    		android:id="@+id/poi_img"/>
		
    	<ImageView
    		android:id="@+id/star_1"
    		android:layout_width="38px"
    		android:layout_height="38px"
    		android:layout_alignParentTop="true"
    		android:layout_toRightOf="@id/poi_img"
    		/>
    	<ImageView
    		android:id="@+id/star_2"
    		android:layout_width="38px"
    		android:layout_height="38px"
    		android:layout_alignParentTop="true"
    		android:layout_toRightOf="@id/star_1"/>
    	<ImageView
    		android:id="@+id/star_3"
    		android:layout_width="38px"
    		android:layout_height="38px"
    		android:layout_alignParentTop="true"
    		android:layout_toRightOf="@id/star_2"/>
    	<ImageView
	    	android:id="@+id/star_4"
    		android:layout_width="38px"
    		android:layout_height="38px"
    		android:layout_alignParentTop="true"
    		android:layout_toRightOf="@id/star_3"/>
    	<ImageView
    		android:id="@+id/star_5"
    		android:layout_width="38px"
    		android:layout_height="38px"
    		android:layout_alignParentTop="true"
    		android:layout_toRightOf="@id/star_4"/>
    	<Button
    		android:id="@+id/view_on_map_button"
    		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_below="@id/star_1"
        	android:layout_toRightOf="@id/poi_img"
        	android:text="View on map" />
    		
    </RelativeLayout>
        <TableLayout android:id="@+id/comment_table"
    	xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:stretchColumns="1">
	    <View
	        android:layout_height="1dip"
	        android:background="#FF909090" />
    	<TableRow>
	        <TextView
	            android:gravity="left"
	            android:text="Mycket goda bÃ¶rjare" />
	        <TextView
	            android:text="4/5"
	            android:gravity="right" />
	    </TableRow>
	    <View
	        android:layout_height="1dip"
	        android:background="#FF909090" />
    	<TableRow>
	        <TextView
	            android:gravity="left"
	            android:text="Helt OK." />
	        <TextView
	            android:text="3/5"
	            android:gravity="right" />
	    </TableRow>
	    <View
	        android:layout_height="1dip"
	        android:background="#FF909090" />
    </TableLayout>
</LinearLayout>
